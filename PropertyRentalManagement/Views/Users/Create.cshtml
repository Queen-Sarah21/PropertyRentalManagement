@model PropertyRentalManagement.Models.User

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">Create User</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>User</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- UserId field -->
        <div class="form-group row">
            @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Password field -->
        <div class="form-group row">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Submit button -->
        <div class="form-group row">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Create" class="btn btn-success btn-sm" />
            </div>
        </div>
    </div>
}

<!-- ActionLink to go back to Manager List -->
<div class="text-center mt-3">
    @Html.ActionLink("Back to Manager List", "Index", "Managers", null, new { @class = "btn btn-secondary btn-sm" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    h2 {
        font-size: 28px;
        font-weight: bold;
        color: #333;
    }

    .form-group {
        margin-bottom: 1.2rem;
    }

        .form-group label {
            font-weight: bold;
            color: #495057;
        }

    .form-control {
        padding: 10px;
        font-size: 14px;
        border-radius: 4px;
        border: 1px solid #ced4da;
        width: 100%;
    }

    .text-danger {
        color: red;
        font-size: 12px;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
        font-size: 14px;
        padding: 8px 20px;
        border-radius: 4px;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        font-size: 14px;
        padding: 8px 20px;
        border-radius: 4px;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .form-horizontal {
        max-width: 500px;
        margin: 0 auto;
    }

    .row {
        margin-bottom: 15px;
    }


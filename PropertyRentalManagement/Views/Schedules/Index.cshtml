@model IEnumerable<PropertyRentalManagement.Models.Schedule>

@{
    ViewBag.Title = "My Availability";
}

<h2 class="page-title">My Availability</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Manager.ManagerId)</th>
            <th>@Html.DisplayNameFor(model => model.Manager.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.ScheduleDate)</th>
            <th>@Html.DisplayNameFor(model => model.StartTime)</th>
            <th>@Html.DisplayNameFor(model => model.EndTime)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Manager.ManagerId)</td>
                <td>@Html.DisplayFor(modelItem => item.Manager.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.ScheduleDate)</td>
                <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                <td>@Html.DisplayFor(modelItem => item.EndTime)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ScheduleId }, new { @class = "btn btn-sm btn-warning" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ScheduleId }, new { @class = "btn btn-sm btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ScheduleId }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .page-title {
        font-size: 2em;
        margin-bottom: 20px;
        text-align: center;
        color: #2c3e50;
    }

    .btn {
        text-decoration: none;
        padding: 10px 15px;
        font-size: 1em;
        border-radius: 4px;
        transition: background-color 0.3s ease-in-out;
    }

    .btn-primary {
        background-color: #3498db;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #2980b9;
        }

    .btn-warning {
        background-color: #f1c40f;
        color: white;
    }

        .btn-warning:hover {
            background-color: #d4ac0d;
        }

    .btn-info {
        background-color: #5bc0de;
        color: white;
    }

        .btn-info:hover {
            background-color: #31b0d5;
        }

    .btn-danger {
        background-color: #e74c3c;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    .table {
        width: 100%;
        margin: 20px 0;
        border-collapse: collapse;
        text-align: left;
        font-size: 1em;
        color: #333;
    }

        .table th,
        .table td {
            padding: 10px;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #f8f9fa;
            font-weight: bold;
            text-align: center;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table-striped tbody tr:hover {
        background-color: #f1f1f1;
    }

    .table-bordered {
        border: 1px solid #ddd;
    }
</style>


@model PropertyRentalManagement.Models.Schedule

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center text-danger my-4">Delete Schedule</h2>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Are you sure you want to delete this schedule?</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning text-center" role="alert">
                <strong>Warning:</strong> Deleting this schedule is permanent and cannot be undone!
            </div>

            <div class="text-center my-3">
                <h4 class="text-danger">Are you sure you want to delete this schedule?</h4>
            </div>

            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ScheduleDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ScheduleDate)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.StartTime)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.StartTime)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.EndTime)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.EndTime)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Manager.FirstName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Manager.FirstName)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions text-center">
                    <input type="submit" value="Delete" class="btn btn-danger btn-lg" /> |
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary btn-lg" })
                </div>
            }
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 20px;
    }

    .card {
        margin-top: 20px;
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffeeba;
    }

    .form-actions {
        margin-top: 20px;
    }

        .form-actions input[type="submit"] {
            width: 150px;
        }

        .form-actions .btn {
            font-size: 1.2em;
            padding: 10px 20px;
        }

    .dl-horizontal dt {
        font-weight: bold;
    }

    .dl-horizontal dd {
        margin-bottom: 10px;
    }

    .text-danger {
        color: #dc3545 !important;
    }

    .card-header.bg-danger {
        background-color: #dc3545 !important;
    }
</style>


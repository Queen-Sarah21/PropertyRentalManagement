@model PropertyRentalManagement.Models.Appointment

@{
    ViewBag.Title = "Appointment Details";
}

<h2>Appointment Details</h2>

<div class="well">
    <h3>Tenant Information</h3>
    <p><strong>Name:</strong> @Model.Tenant.FirstName @Model.Tenant.LastName</p>
    <p><strong>Email:</strong> @Model.Tenant.Email</p>
    <p><strong>Phone:</strong> @Model.Tenant.Phone</p>

    <h3>Apartment Information</h3>
    <p><strong>Building:</strong> @Model.Apartment.BuildingCode</p>
    <p><strong>Apartment Number:</strong> @Model.Apartment.ApartmentNum</p>

    <h3>Appointment Status</h3>
    <p>@Model.Status.Description</p>

    <h3>Actions</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.AppointmentId)

        if (Model.Status.Description != "Confirmed")
        {
            <button type="submit" name="status" value="Confirm" class="btn btn-success">Confirm</button>
        }

        if (Model.Status.Description != "Canceled")
        {
            <button type="submit" name="status" value="Cancel" class="btn btn-danger">Cancel</button>
        }
    }
</div>

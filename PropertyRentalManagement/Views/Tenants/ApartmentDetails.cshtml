@model PropertyRentalManagement.Models.ApartmentDetailsViewModel

@{
    ViewBag.Title = "Apartment Details";
}

<h2>Apartment Details</h2>

<div>
    <h4>Apartment Information</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Rooms)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rooms)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Bathrooms)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Bathrooms)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rent)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rent)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StatusDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StatusDescription)
        </dd>

        <dt>Address</dt>
        <dd>
            @Model.Address, @Model.City, @Model.Province, @Model.ZipCode
        </dd>
    </dl>
</div>

<div>
    <h4>Apartment Image</h4>
    <hr />
    @if (Model.ImageUrls != null && Model.ImageUrls.Any())
    {
        <div style="border: 1px solid #ddd; padding: 10px; border-radius: 8px; max-width: 500px;">
            <img src="@Url.Content(Model.ImageUrls.First())" alt="Apartment Image" style="width: 100%; height: auto; border-radius: 4px;" />
        </div>
    }
    else
    {
        <p>No image available for this apartment.</p>
    }
</div>

<div>
    <a href="@Url.Action("Index", "Apartments")" class="btn btn-primary">Back to List</a>
</div>

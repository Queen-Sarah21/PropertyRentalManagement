@model PropertyRentalManagement.Models.Appointment

@{
    ViewBag.Title = "Book Appointment";
}

<h2>Book Appointment</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.ApartmentNum, "Select Apartment")
        @Html.DropDownList("ApartmentNum", (SelectList)ViewBag.Apartments, "-- Select an Apartment --", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ApartmentNum, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Book Appointment" class="btn btn-primary" />
    </div>

    if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-warning">@ViewBag.ErrorMessage</div>
    }
}
